<%- include("./partials/head.ejs") %>

<div class="container">
    <h1 class="main-title">
        Vazifalar jadvali
    </h1>
    <div class="task-table-wrapper">
        <table class="task-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nomi</th>
                    <th>Tavsifi</th>
                    <th>Holati</th>
                    <th>Boshqarish</th>
                </tr>
            </thead>
            <tbody>
                <% if (todos.length > 0) { %>
                    <% for (let todo in todos) { %>
                        <tr>
                            <td><%= todo.id %></td>
                            <td><%= todo.title %></td>
                            <td><%= todo.desc %></td>
                            <td><%= todo.status %></td>
                            <td>
                                <button>Click</button>
                                <button>Click</button>
                            </td>
                        </tr>
                    <% } %>
                    <% } else { %>
                      <tr>
                        <td colspan="5">Hozircha sizda yangi vazifalar yo'q</td>
                      </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>


